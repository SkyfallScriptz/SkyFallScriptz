-- Create the GUI elements (TextBox and Button)
local screenGui = Instance.new("ScreenGui")
local frame = Instance.new("Frame")
local textBox = Instance.new("TextBox")
local checkButton = Instance.new("TextButton")

screenGui.Parent = game.Players.LocalPlayer.PlayerGui

frame.Parent = screenGui
frame.Size = UDim2.new(0, 400, 0, 200)
frame.Position = UDim2.new(0.5, -200, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

textBox.Parent = frame
textBox.Size = UDim2.new(0, 350, 0, 50)
textBox.Position = UDim2.new(0.5, -175, 0.25, 0)
textBox.PlaceholderText = "Enter Key"
textBox.TextColor3 = Color3.fromRGB(255, 255, 255)
textBox.BackgroundColor3 = Color3.fromRGB(0, 0, 0)

checkButton.Parent = frame
checkButton.Size = UDim2.new(0, 350, 0, 50)
checkButton.Position = UDim2.new(0.5, -175, 0.65, 0)
checkButton.Text = "Check Key"
checkButton.TextColor3 = Color3.fromRGB(255, 255, 255)
checkButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

-- Define the correct key for validation
local validKey = "SOLARAK3Y123"

-- Function to check the key
checkButton.MouseButton1Click:Connect(function()
    if textBox.Text == validKey then
        -- If the key is valid, execute the script
        loadstring(game:HttpGet("https://raw.githubusercontent.com/SkyfallScriptz/SkyFallScriptz/refs/heads/main/Sentinel%20Framework"))()
    else
        -- If the key is invalid, show an error message
        local errorMessage = Instance.new("TextLabel")
        errorMessage.Parent = frame
        errorMessage.Size = UDim2.new(0, 350, 0, 50)
        errorMessage.Position = UDim2.new(0.5, -175, 0.85, 0)
        errorMessage.Text = "Invalid Key!"
        errorMessage.TextColor3 = Color3.fromRGB(255, 0, 0)
        errorMessage.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        errorMessage.TextSize = 18
        errorMessage.TextScaled = true
        wait(2)  -- Show the error message for 2 seconds
        errorMessage:Destroy()
    end
end)
